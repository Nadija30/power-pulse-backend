          {
            "in": "params",
            "name": "Query Params",
            "required": true,
            "type": "string",
            "value": "category,searchQuery,allowed - are optional",
            "description": "allowed - string (yes || no)"
          },
          {
            "in": "header",
            "name": "Authorization token",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {},
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductsResponse"
                }
              }
            }
