            "required": true,
            "type": "string",
            "value": "Page,limit, category, specific",
            "description": "category (Body parts || Equipment || Muscles)"
          },
          {
            "in": "header",
            "name": "Authorization token",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {},
        "responses": {
          "200": {
            "description": "OK",
